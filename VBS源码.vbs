'欢迎界面
msgbox "欢迎使用",,"欢迎"
'设变量
dim r,d,pi,s
pi=3.1415926535
'输入半径
r=inputbox("请输入圆的半径，若要输入直径请留空继续")
if r="" then
'留空，直径计算
d=inputbox("请输入圆的直径")
s=pi*(d/2)*(d/2)
'输出结果
msgbox "您输入的直径为:"&d&"，"&"圆的面积为："&s&"。",,"计算完毕（π按3.1415926535计算）"
'半径计算
else
s=r*r*pi
'输出结果
msgbox "您输入的半径为:"&r&"，"&"圆的面积为："&s&"。",,"计算完毕（π按3.1415926535计算）"
end if
